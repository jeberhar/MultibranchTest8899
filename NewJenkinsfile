pipeline {
    agent any
    stages {
        stage('Build') { 
            steps {
                sh 'echo "Inside the Build stage"'
                sh 'mvn clean'
            }
        }
        stage('Test') { 
            steps {
                sh 'echo "Inside the Test stage"'
                sh 'mvn test'
            }
        }
        stage('Deploy') { 
            steps {
                sh 'echo "Inside the Deploy stage"'
                sh 'mvn package'
            }
        }
    }
}
