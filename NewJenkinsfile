pipeline {
    agent any
    stages {
        stage('Build') { 
            steps {
                sh 'echo "Inside the Build stage"'
                sh 'mvn clean'
            }
        }
        stage('Test') { 
            steps {
                sh 'echo "Inside the Test stage"'
                sh 'mvn test'
            }
        }
        stage('Deploy') { 
            steps {
                sh 'echo "Inside the Deploy stage"'
                sh 'mvn package'
            }
        }
        stage('Consolidate Results') {
            steps {
                input('Do you want to capture the results?')
                junit '**/target/surefire-reports/TEST-*.xml'
                archive 'target/*.jar'
            }
        }
        stage('Email Build Status') {
            steps {
                mail bcc: '', body: 'Hey this email worked from the Jenkins DeclarativePipeline job!\\n\\n$(env.JOB_NAME)\\n\\n$(env.BUILD_NUMBER)\\n\\n$(currentBuild.currentResult)\\n\\n$(env.BUILD_URL)', cc: '', from: 'donotreply@outrider.ai', replyTo: 'donotreply@outrider.ai', subject: 'DeclarativePipeline information', to: 'jay.eberhard@gmail.com'
            }
        }
    }
}
